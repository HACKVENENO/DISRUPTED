<!DOCTYPE html>
<html lang="es">

    <!-- head-->    
    <%- include('./partials/head.ejs') %>

<body>
    <!-- header-->
    <%- include('./partials/header.ejs') %>

        <h1 class="title-page">EDITAR UN PRODUCTO</h1>
 
       
     
        <div class="container-products">
            <div class="col-12">
				<h2 class="products-title">Est√°s editando: <i><%= productoToEdit.name %></i><i></i></h2>
			</div>

            

            <form action="/products/edit/?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Campera Negra" class="form-input">
					</div>
                </div>
            </form>

            <form action="/products/edit/?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="$5600" class="form-input">
					</div>
                </div>
            </form>

            <form action="/products/edit/?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="color" class="form-label">Color del producto:</label>
						<input type="text" id="color" name="color" placeholder="Ej: Negro" class="form-input">
					</div>
                </div>
            </form>

            <form action="/products/edit/?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="sizw" class="form-label">Talle del producto:</label>
						<input type="text" id="talle" name="talle" placeholder="M" class="form-input">
					</div>
                </div>
            </form>

        </div>
        <div class="col-12 col-md-6">
            <label for="foto" class="form-label">Foto:</label>
            <input type="file" id="foto" name="fotoProducto" class="form-input">
        </div>
        <div class="col-12">
            <button type="submit" class="buy-now-button">Guardar producto</button>
        </div>

          <!-- footer-->
          <%- include('./partials/footer.ejs') %>  

</body>
</html>