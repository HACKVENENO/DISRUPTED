<!DOCTYPE html>
<html lang="es">

    <!-- head-->    
    <%- include('./partials/head.ejs') %>

<body>
    <!-- header-->
    <%- include('./partials/header.ejs') %>

<main class = "crearProducto">
	<form action = "/productos/create" method = "POST">
		<div>
			<h2>CREAR PRODUCTO</h2>
		</div>
		<div class = "div-1">
			<label for = "name">NOMBRE</label>
			<input type = "text" name = "name" id = "name">
		</div>
		<div class = "div-1">
			<label for = "price">PRECIO</label>
			<input type = "text" name = "price" id = "price">
		</div>
		<div class = "div-1">
			<label for = "color">COLOR DISPONIBLE</label>
			<select name = "color" id = "color">
				<option>SELECCIONAR</option>
				<option>NEGRO</option>
				<option>BLANCO</option>
			</select>
		</div>
		<div class = "div-1">
			<label for = "size">TALLE DISPONIBLE</label>
			<select name = "size" id = "size">
				<option>SELECCIONAR</option>
				<option>XS</option>
				<option>S</option>
				<option>M</option>
				<option>L</option>
				<option>XL</option>
				<option>XXL</option>
			</select>
		</div>
		<div>
			<p>CATEGORÍAS<p>
			<div class = "categorias">
				<div>
					<input type = "checkbox" name = "category" id = "category">
					<label for = "category">NUEVA COLECCIÓN</label>
				</div>
				<div>
					<input type = "checkbox" name = "category" id = "category">
					<label for = "category">SALE</label>
				</div>
				<div>
					<input type = "checkbox" name = "category" id = "category">
					<label for = "category">INVIERNO</label>
				</div>
				<div>
					<input type = "checkbox" name = "category" id = "category">
					<label for = "category">OTOÑO</label>
				</div>
				<div>
					<input type = "checkbox" name = "category" id = "category">
					<label for = "category">PRIMAVERA</label>
				</div>
				<div>
					<input type = "checkbox" name = "category" id = "category">
					<label for = "category">VERANO</label>
				</div>
				<div>
					<input type = "checkbox" name = "category" id = "category">
					<label for = "category">REMERAS</label>
				</div>
				<div>
					<input type = "checkbox" name = "category" id = "category">
					<label for = "category">BUZOS</label>
				</div>
				<div>
					<input type = "checkbox" name = "category" id = "category">
					<label for = "category">PANTALONES</label>
				</div>
				<div>
					<input type = "checkbox" name = "category" id = "category">
					<label for = "category">CAMPERAS</label>
				</div>
				<div>
					<input type = "checkbox" name = "category" id = "category">
					<label for = "category">POLLERAS</label>
				</div>
				<div>
					<input type = "checkbox" name = "category" id = "category">
					<label for = "category">TOPS</label>
				</div>
			</div>
		</div>
		<div class = "div-1">
			<label for = "discount">DESCUENTO</label>
			<input type = "text" name = "discount" id = "discount">
		</div>
		<div class = "div-1">
			<label for = "stock" name = "stock">STOCK DISPONIBLE</label>
			<select name = "stock" id = "stock">
				<option>SELECCIONAR</option>
				<option>0</option>
				<option>1</option>
				<option>2</option>
				<option>3</option>
				<option>4</option>
				<option>5</option>
				<option>6</option>
			</select>
		</div>
		<div  class = "div-3">
			<label>DESCRIPCIÓN</label>
			<textarea name = "description" id = "description"></textarea>
		</div>
		<div  class = "div-3">
			<label for = "image">SUBIR IMAGEN</label>
			<input type = "file" id = "image" name = "image">
		</div>
		<div class = "guardar">
			<button class = "botonGuardar" type="submit">GUARDAR PRODUCTO</button>
		</div>
	</form>	
</main>

     <!-- footer-->
     <%- include('./partials/footer.ejs') %>    
</body>
</html>